<%- include('./partials/header.ejs') %>

    <form action="/cohorts" class="container" method="POST">
        <div class="mb-3">
            <label for="logo" class="form-label">Logo Url</label>
            <input name="logoUrl" type="text" class="form-control" id="logo" placeholder="e.g. https://www.example.com/some.png">
        </div>
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input name="name" type="text" class="form-control" id="name" placeholder="Flying Funks">
        </div>
        <div class="mb-3">
            <label for="members" class="form-label">Members</label>
            <textarea name="members" class="form-control" id="members" rows="3" placeholder="Jon Snow, Daenerys, Melisandra, Arya Stark"></textarea>
        </div>
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-outline-primary">Submit</button>
        </div>
    </form>

<%- include('./partials/footer.ejs') %>